<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Android Printer -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Androids for RW 1.5</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="ChJAndroidPrinter"]/comps</xpath>
            <value>
                <li Class="LightsOut2.CompProperties.CompProperties_Standby">
                    <compClass>LightsOut2.ThingComps.StandbyComp</compClass>
                    <standbyActuatorClass>LightsOut2.ModCompatibility.Androids.StandbyActuators.AndroidPrinterStandbyActuator</standbyActuatorClass>
                    <startEnabled>True</startEnabled>
                </li>
            </value>
        </match>
    </Operation>

