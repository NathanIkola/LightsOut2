            <xpath>Defs/ThingDef[defName="VHGE_GasWallLamp"]/comps</xpath>
            <value>
                <li Class="LightsOut2.CompProperties.CompProperties_Standby">
                    <compClass>LightsOut2.ThingComps.StandbyLightComp</compClass>
                    <startEnabled>True</startEnabled>
                </li>
            </value>
        </match>
    </Operation>

    <!-- Gas Flood Lamp -->
