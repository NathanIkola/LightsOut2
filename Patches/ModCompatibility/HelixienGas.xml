<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Gas Lamp -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Helixien Gas Expanded</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VHGE_GasLamp"]/comps</xpath>
            <value>
                <li Class="LightsOut2.CompProperties.CompProperties_Standby">
                    <compClass>LightsOut2.ThingComps.StandbyLightComp</compClass>
                    <startEnabled>True</startEnabled>
                </li>
            </value>
        </match>
    </Operation>
    
    <!-- Gas Wall Lamp -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Helixien Gas Expanded</li>
        </mods>
