        <mods>
            <li>Vanilla Helixien Gas Expanded</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VHGE_GasFloodlight"]/comps</xpath>
            <value>
                <li Class="LightsOut2.CompProperties.CompProperties_Standby">
                    <compClass>LightsOut2.ThingComps.StandbyLightComp</compClass>
                    <startEnabled>True</startEnabled>
                </li>
            </value>
        </match>
    </Operation>
</Patch>